 {{ range . }}
 <div class="blogpost ten columns offset-by-two">
  <div id="blogpost-{{.Id}}" class="nine columns omega blogpost-content">
    <div id="blogpost-header-{{.Id}}" class="blogpost-header">
      <ul>
      <li class="blogpost-title">
        <h3><a class="blogpost-title" href="/post/{{.Id}}">{{.Title}}</a></h3>
      </li>
      <li>
          <small>{{.Written | formatTime}}</small>
      </li>
      </ul>
    </div>
    <div id="blogpost-body-{{.Id}}" class="blogpost-body">
      {{.Text | unescaped}}
    </div>
  </div>
</div>
{{ end }}